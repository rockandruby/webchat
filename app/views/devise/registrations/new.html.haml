.limiter
  .container-login100
    .wrap-login100
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'login100-form validate-form'} ) do |f|
        %span.login100-form-title.p-b-26
          Welcome
        %span.login100-form-title.p-b-48
          %i.zmdi.zmdi-font
        .wrap-input100.validate-input
          = f.text_field :nickname, class: 'input100'
          %span.focus-input100{"data-placeholder" => "Nickname"}
        .wrap-input100.validate-input{"data-validate" => "Valid email is: a@b.c"}
          = f.email_field :email, class: 'input100'
          %span.focus-input100{"data-placeholder" => "Email"}
        .wrap-input100.validate-input{"data-validate" => "Enter password"}
          %span.btn-show-pass
            %i.zmdi.zmdi-eye
          = f.password_field :password, class: 'input100'
          %span.focus-input100{"data-placeholder" => "Password"}
        .container-login100-form-btn
          .wrap-login100-form-btn
            .login100-form-bgbtn
            %button.login100-form-btn
              Register
