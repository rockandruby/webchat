- if message.author != current_user
  .row.message-body
    .col-sm-12.message-main-receiver
      .receiver
        .message-text= content_with_emoji message.text
        %span.message-time.pull-right= message.created_at.localtime.to_formatted_s(:short)
- else
  .row.message-body
    .col-sm-12.message-main-sender
      .sender
        .message-text= content_with_emoji message.text
        %span.message-time.pull-right= message.created_at.localtime.to_formatted_s(:short)